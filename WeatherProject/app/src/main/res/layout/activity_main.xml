<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffdd0"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/id_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColor="#310A31"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <Button
        android:id="@+id/id_button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EE6C4D"
        android:text="search"
        android:textColor="#fffdd0"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_editText"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zip Code:"
        android:textColor="#310A31"
        android:textSize="24dp"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintBottom_toTopOf="@+id/id_button_search"
        app:layout_constraintEnd_toStartOf="@+id/id_editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_editText" />

    <TextView
        android:id="@+id/id_textView_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#310A31"
        android:textSize="60dp"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_button_search"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/id_textView_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#310A31"
        android:textSize="40dp"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView_current"
        app:layout_constraintVertical_bias="0.01999998" />

    <ListView
        android:id="@+id/id_ListView"
        android:layout_width="0dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView_quote"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/id_imageView_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/id_textView_town"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_textView_town"
        app:layout_constraintTop_toTopOf="@+id/id_textView_town" />

    <TextView
        android:id="@+id/id_textView_currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#310A31"
        android:textSize="30dp"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView_town"
        app:layout_constraintVertical_bias="0.00999999" />

    <TextView
        android:id="@+id/id_textView_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#310A31"
        android:textSize="20dp"
        app:fontFamily="@font/open_sans_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_textView_currentTime"
        app:layout_constraintVertical_bias="0.01999998" />

</androidx.constraintlayout.widget.ConstraintLayout>